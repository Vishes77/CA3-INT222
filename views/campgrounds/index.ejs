<% layout('layout/indexpageboilerplate') %> 
    <!-- <div>
        <a href="/campgrounds/new">Add Campgrounds</a>
    </div> -->
    <div class="d-flex flex-wrap">
    <% for (let campground of campgrounds){%>            
    <div class="card mx-3 mb-3" style="width: 18rem;">
      <img class="card-img-top" src="<%=campground.image%>" alt="Card image cap">
      <div class="card-body">
      <h5 class="card-title"><%= campground.tittle %></h5>
      <p class="card-text">><%= campground.description %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><%= campground.location%></li>
      <!-- <li class="list-group-item">Dapibus ac facilisis in</li>
      <li class="list-group-item">Vestibulum at eros</li> -->
    </ul>
    <div class="card-body">
      <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View<%=campground.title%></a>
      <!-- <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a> -->
    </div>
  </div> 
          

<% }%>
</div>
    






